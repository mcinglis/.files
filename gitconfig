[user]
	name = Malcolm Inglis
	email = me@minglis.id.au

[init]
	templatedir = ~/.git_template

[color]
	ui = true

[alias]
	l = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
	d = diff
	s = status
	c = commit -am
	p = push
	ctags = !.git/hooks/ctags
	authors = !git log --format='%aN <%C(blue)%aE%Creset>' | sort -u

[push]
	default = simple

[diff]
	algorithm = patience
	tool = vimdiff

[core]
	excludesfile = /home/malcolm/.gitignore
