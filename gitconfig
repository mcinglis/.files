[user]
	name = Malcolm Inglis
	email = me@minglis.id.au

[init]
	templatedir = ~/.git_template

[core]
	editor = vim
	pager = less -+S -iF

[color]
	ui = true

[alias]
	l = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
	d = diff --word-diff
	s = status
	c = commit -am
	p = push
	ctags = !.git/hooks/ctags

[push]
	default = simple

[diff]
	tool = vimdiff

